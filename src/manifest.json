{

  "manifest_version": 2,
  "name": "Youtube Live Helper",
  "version": "1.0.1",

  "description": "",

  "icons": {
    "48": "icons/icon-48.png"
  },

  "permissions": [
    "webRequest",
    "<all_urls>",
    "storage"
  ],

  "background": {
    "scripts": ["options/background.js"]
  },

  
  "options_ui": {
    "page": "options/options.html"
  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/watch?v=*"],
      "js": ["main.js"]
    }
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "{231d7395-ea9e-4772-8da8-11ab3c3eaf71}"
    }
  },

  "browser_action": {
    "default_icon": {
      "48": "icons/icon-48.png"
    }
  }

}